<div class="panel panel-default">

  <div class="panel-heading">
    <span class="h3"><%= @device.name %></span>
    <%= link_to 'Cancel', {action: :index, guarded_object_id: @device.object_id}, class: 'btn btn-warning pull-right btn-sm' %>
  </div>

  <div class="panel-body">
    <%= bootstrap_form_for(@device) do |f| %>
        <%= f.text_field :name %>
        <%= f.number_field :gpio_listen %>
        <%= f.number_field :gpio_pull %>
        <%= f.number_field :gpio_ok %>
        <%= f.primary 'Save' %>
    <% end %>
  </div>
</div>