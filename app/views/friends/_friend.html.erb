<li class="media my-1">
  <img class="d-flex align-self-center mr-3 rounded-circle img-thumbnail" src="<%= friend.decorate.avatar_url %>" alt="avatar" style="height: 64px; width: 64px">
  <div class="media-body">
    <div class="row mt-4">
      <div class="col">
        <h6 class="mt-0 mb-1"><%= link_to friend.decorate.full_name, user_path(friend) %></h6>
      </div>
      <div class="col text-muted"><%= friend.about %></div>

      <div class="col bl-acts text-right">
        <%= content_for :actions %>
        <% content_for :actions, '', flush: true %>
      </div>
    </div>
  </div>
</li>