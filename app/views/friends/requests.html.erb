<div class="bl">
  <%= render :partial => 'bl_header' %>
  <div class="bl-body">
    <ul class="list-unstyled">
      <% @requests.each do |request| %>
          <% friend = request.friend %>
          <% content_for :actions do %>
              <%= link_to t('friend.accept'), accept_friend_path(request), class: 'btn btn-new', method: :post %>
          <% end %>

          <%= render :partial => 'friend', object: friend %>
      <% end %>
    </ul>

  </div>
</div>