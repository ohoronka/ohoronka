<%= bootstrap_form_for([@facility, @share]) do |f| %>
    <% @share.errors.add(:user_uuid_or_email, I18n.t('facility_share.already_shared')) if @share.errors.details[:facility_id].any? %>
    <%= f.text_field :user_uuid_or_email, placeholder: FacilityShare.human_attribute_name(:user_uuid_or_email) %>
    <%# f.select :role, FacilityShare::ROLES.keys %>
    <%= f.form_group class: 'form-acts' do %>
        <%= f.submit t('actions.save'), class: 'btn btn-save' %>
        <%= link_to t('actions.cancel'), {action: :index}, class: 'btn btn-cancel' %>
    <% end %>
<% end %>
