<div class="bl">
  <%= render :partial => 'header' %>

  <div class="bl-body">
    <ul class="list-unstyled">
      <% @shares.each do |share| %>
          <% user = share.user %>
          <li class="media my-1">
            <img class="d-flex align-self-center mr-3 rounded-circle img-thumbnail" src="<%= user.decorate.avatar_url %>" alt="avatar" style="height: 64px; width: 64px">
            <div class="media-body">
              <div class="row mt-4">
                <div class="col">
                  <h6 class="mt-0 mb-1"><%= user.decorate.full_name %></h6>
                </div>
                <div class="col text-muted">
                  <%= share.decorate.human_enum(:role) %>
                  <% if current_user.id == user.id %>
                      <span class="badge badge-success"><%= t('its_you') %></span>
                  <% end %>
                </div>

                <div class="col bl-acts text-right">
                  <%= link_to t('actions.edit_with_icon_html'), {action: :edit, id: share}, class: 'btn btn-edit' %>
                  <% if current_user.id != user.id %>
                      <%= link_to t('actions.destroy_icon_html'), {action: :destroy, id: share}, method: :delete, class: 'btn btn-destroy', data: {confirm: t('confirm.destroy')} %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
      <% end %>
    </ul>

    <%= paginate @shares, theme: 'twitter-bootstrap-4' %>
  </div>
</div>