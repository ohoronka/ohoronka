<%= bootstrap_form_for @user do |f| %>
    <%= f.text_field :name %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.form_group class: 'text-right' do %>
        <%= f.submit 'Save', class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Cancel', {action: :index}, class: 'btn btn-warning pull-right btn-sm' %>
    <% end %>
<% end %>