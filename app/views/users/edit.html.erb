<div class="bl">
  <%= render :partial => 'users/nav' %>
  <div class="bl-body">
    <%= bootstrap_form_for(@user) do |f| %>
        <%= f.text_field :name %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
        <%= f.password_field :password_confirmation %>
        <%= f.form_group class: 'form-btns' do %>
            <%= f.submit 'Save', class: 'btn btn-save' %>
        <% end %>
    <% end %>
  </div>
</div>


