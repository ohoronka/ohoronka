<div class="panel panel-primary">
  <div class="panel-heading">
    Facilities
    <div class="pull-right">
      <%= link_to 'New Facility', {action: :new}, class: 'btn btn-success btn-xs' %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td>
          <%= link_to 'Edit', {action: :edit, id: facility.id}, class: 'btn btn-success btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>