<div class="card tasks sameheight-item" data-exclude="xs,sm">
  <div class="card-header bordered">
    <div class="header-block">
      <h3 class="title">
        <%= t('actions.edit') %> <%= @facility.name %>
      </h3>
    </div>
    <div class="header-block pull-right">
      <%= link_to t('actions.destroy_icon_html'), {action: :destroy}, class: 'btn btn-destroy btn-sm', method: :delete, data: {confirm: t('confirm.destroy')} %>
    </div>
  </div>
  <div class="card-block">
    <%= render :partial => 'form' %>
  </div>
</div>
