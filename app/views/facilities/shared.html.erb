<div class="bl">
  <%= render :partial => "header" %>
  <div class="bl-body">
    <table class="list">
      <tbody>
      <% @facilities.each do |facility| %>
          <tr>
            <td><%= facility.name %></td>
            <td class="act-col">
              <%# link_to '<i class="fa fa-cog" aria-hidden="true"></i> Edit'.html_safe, {action: :edit, id: facility.id}, class: 'btn btn-edit' %>
              <%# link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, {action: :destroy, id: facility.id}, method: :delete, class: 'btn btn-destroy', data: {confirm: 'Record will be remowed! Sure?'} %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>