<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4">

      <%= bootstrap_form_for(@session, url: {action: :create}, method: :post, as: :session) do |f| %>
          <%= f.errors_on :base %>
          <%= f.text_field :user_name %>
          <%= f.password_field :password %>
          <%= f.primary 'Sign In', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>