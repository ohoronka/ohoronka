<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <div class="bl">
        <div class="bl-body">
          <div class="bl-title text-center">Sign In</div>
          <%= bootstrap_form_for(@session, url: {action: :create}, method: :post, as: :session) do |f| %>
              <%= f.errors_on :base %>
              <%= f.text_field :user_name %>
              <%= f.password_field :password %>
              <%= f.form_group class: 'act-btns' do %>
                  <%= f.primary 'Sign In', class: 'btn btn-save btn-block' %>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col"></div>
  </div>
</div>