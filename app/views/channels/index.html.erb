<div class="bl">
  <%= render :partial => 'users/nav' %>
  <div class="bl-body">
    <div class="bl-title-bl">
      <div class="bl-title">Notification Channels</div>
      <div class="bl-acts">
        <%= link_to 'Add Channel', select_type_channels_path, class: 'btn btn-new' if current_user.allowed_channel_types.any? %>
      </div>
    </div>

    <table class="list">
      <tbody>
      <% current_user.channels.each do |channel| %>
          <tr>
            <td><%= link_to channel.type, {action: :show, id: channel} %></td>
            <td class="act-col">
              <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, {action: :destroy, id: channel}, method: :delete, class: 'btn btn-destroy', data: {confirm: 'The record will be removed! Are you sure?'} %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>