<div class="card tasks sameheight-item" data-exclude="xs,sm">
  <div class="card-header bordered card-header-sm">
    <%= render :partial => 'users/header' %>
    <div class="header-block pull-right">
      <%= link_to t('actions.new_with_icon_html'), select_type_channels_path, class: 'btn btn-new btn-sm' if current_user.allowed_channel_types.any? %>
    </div>
  </div>
  <div class="card-block">
    <table class="list">
      <tbody>
      <% @channels.each do |channel| %>
          <tr>
            <td><%= link_to channel.class.model_name.human, {action: :show, id: channel} %></td>
            <td class="act-col">
              <%= link_to t('actions.destroy_icon_html'), {action: :destroy, id: channel}, method: :delete, class: 'btn btn-destroy', data: {confirm: t('confirm.destroy')} %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= paginate @channels, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
