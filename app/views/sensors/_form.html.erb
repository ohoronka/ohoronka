<%= bootstrap_form_for([facility, device, @sensor]) do |f| %>
    <%= f.text_field :name %>
    <%= f.select :gpio_listen, {'Port 1' => 16, 'Port 2' => 32, 'Port 3' => 4096, 'Port 4' => 8192} %>
    <%# f.number_field :gpio_pull %>
    <%# f.number_field :gpio_ok %>

    <%= f.form_group class: 'form-btns' do %>
        <%= f.submit t('actions.save'), class: 'btn btn-save' %>
        <%= link_to t('actions.cancel'), {action: :index}, class: 'btn btn-cancel' %>
    <% end %>
<% end %>