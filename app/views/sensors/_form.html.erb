<%= bootstrap_form_for([object, device, @sensor], layout: :horizontal) do |f| %>
    <%= f.text_field :name %>
    <%= f.number_field :gpio_listen %>
    <%= f.number_field :gpio_pull %>
    <%= f.number_field :gpio_ok %>

    <%= f.form_group class: 'text-right' do %>
        <%= f.submit 'Save', class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Cancel', {action: :index}, class: 'btn btn-warning btn-sm' %>
    <% end %>
<% end %>