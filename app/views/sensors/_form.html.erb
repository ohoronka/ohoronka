<%= bootstrap_form_for([facility, device, @sensor]) do |f| %>
    <%= f.text_field :name %>
    <%= f.number_field :gpio_listen %>
    <%= f.number_field :gpio_pull %>
    <%= f.number_field :gpio_ok %>

    <%= f.form_group class: 'form-btns' do %>
        <%= f.submit 'Save', class: 'btn btn-save' %>
        <%= link_to 'Cancel', {action: :index}, class: 'btn btn-cancel' %>
    <% end %>
<% end %>