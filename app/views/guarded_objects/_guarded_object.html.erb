<div id="object_<%= guarded_object.id %>" class="panel panel-<%= guarded_object.decorate.css_status %>">
  <div class="panel-heading">
    <h3 class="panel-title"><%= guarded_object.name %></h3>
  </div>
  <div class="panel-body">
    <%= link_to "Set #{guarded_object.next_status}",
      set_next_status_guarded_object_path(guarded_object),
      class: "btn btn-#{guarded_object.decorate.css_next_status}",
      remote: true,
      method: :patch
    %>
  </div>
</div>