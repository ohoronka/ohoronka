<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>OHORONKA</title>

  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

<nav class="navbar <%= 'navbar-expand-sm' unless mobile? %> navbar-dark" style="background-color: #3097D1 !important;">
  <a class="navbar-brand" href="<%= root_path %>">
    <img src="<%= image_path('shield.svg') %>" alt="Ohoronka" width="30" height="30" class="rounded-circle">
    <% if content_for? :title %>
        <%= content_for :title %>
    <% end %>
  </a>
  <% if mobile? %>
      <div class="navbar-header pull-right">
        <div class="dropdown">
          <button class="btn p-0 bg-transparent" type="button" id="profile-menu-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img src="<%= current_user.decorate.avatar_url %>" alt="Me" class="rounded-circle" style="width: 40px; height: 40px;">
          </button>
          <div class="dropdown-menu dropdown-menu-right" style="right: 0px; left: auto;" aria-labelledby="profile-menu-button">
            <%= link_to t('.full_version'), change_version_path, class: 'dropdown-item', method: :post %>
            <%= link_to t('.channels'), channels_path, class: 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to t('.sign_out'), sign_out_path, method: :delete, class: 'dropdown-item' %>
          </div>
        </div>
      </div>
  <% else %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to Facility.model_name.human(count: 2), facilities_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to t('.friends'), friends_path, class: 'nav-link' %>
          </li>
        </ul>

        <ul class="navbar-nav">
          <li class="nav-item mx-2">
            <a href="<%= notifications_path %>" class="btn btn-primary bg-transparent">
              <i class="fa fa-bell-o" aria-hidden="true"></i>
              <% if ( unread_notifications = current_user.notifications.unread.count) > 0 %>
                  <span class="badge badge-danger"><%= unread_notifications %></span>
              <% end %>
            </a>
          </li>
          <li class="nav-item">
            <div class="dropdown">
              <button class="btn p-0 bg-transparent" type="button" id="profile-menu-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="<%= current_user.decorate.avatar_url %>" alt="Me" class="rounded-circle" style="width: 40px; height: 40px;">
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profile-menu-button">
                <%= link_to t('.mobile_version'), change_version_path, class: 'dropdown-item', method: :post if session[:full_version] %>
                <%= link_to t('.profile'), edit_user_path(current_user), class: 'dropdown-item' %>
                <div class="dropdown-divider"></div>
                <%= link_to t('.sign_out'), sign_out_path, method: :delete, class: 'dropdown-item' %>
              </div>
            </div>
          </li>
        </ul>
      </div>
  <% end %>
</nav>

<div class="flash" id="flash">
  <!--<div class="alert alert-dark alert-dismissible fade show" role="alert">-->
    <!--<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span>-->
    <!--</button>-->
    <!--Click the x on the upper right to dismiss this little thing. Or click growl again to show more growls-->
  <!--</div>-->
</div>

<%= content_for(:pre) %>

<div class="container">
  <div class="row">
    <% unless mobile? %>
        <div class="col-md-3">
          <div class="card my-3">
            <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_user_path(current_user), class: 'btn btn-edit btn-sm', style: 'position: absolute;right: 8px;top: 8px;' %>
            <img class="card-img-top" src="https://bootstrap-themes.github.io/application/assets/img/iceland.jpg" alt="background" style="width: 100%; height: 44%">
            <div class="card-body">
              <img src="<%= current_user.decorate.avatar_url %>" alt="Me" class="rounded-circle mx-auto d-block img-thumbnail" style="margin-top: -75px; height: 110px; width: 110px">
              <!--<img src="https://s.gravatar.com/avatar/9d7a0461ce90e58e1bfbd991387eb592?s=100" alt="Me" class="rounded-circle mx-auto d-block img-thumbnail" style="margin-top: -75px">-->
              <h6 class="card-title text-center m-2"><%= current_user.decorate.full_name %></h6>
              <p class="text-center card-text">
                <%= current_user.about %>
              </p>

            </div>
          </div>
          <%= yield(:left_col) if content_for? :left_col %>
        </div>
  <% end %>

    <div class="<%= content_for?(:right_col) ? 'col-md-6' : 'col-md-9' %> <%= 'col-md-12' if mobile? %>">
      <%= yield %>
    </div>

    <% if content_for?(:right_col) && !mobile? %>
        <div class="col-md-3">
          <%= yield :right_col %>
        </div>
    <% end %>
  </div>
</div>
<% if flash[:notice] %>
    <script type="text/javascript" charset="utf-8">
        flash('<%= j flash[:notice] %>')
    </script>
<% end %>
<% if flash[:error] %>
    <script type="text/javascript" charset="utf-8">
        flash('<%= j flash[:error] %>')
    </script>
<% end %>
</body>
</html>
